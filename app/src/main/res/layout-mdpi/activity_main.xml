<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10pt"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editShow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20pt"
        android:ems="10"
        android:gravity="bottom|right"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/buClean"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buCleanEvent"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buPlusMinus"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumEvent"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buPercent"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buPercentEvent"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buDiv"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buOpEvent"
                android:text="รท"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu7"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumEvent"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu8"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumEvent"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu9"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumEvent"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buMul"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buOpEvent"
                android:text="*"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu4"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumEvent"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu5"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumEvent"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu6"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumEvent"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buSub"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buOpEvent"
                android:text="-"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bu1"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumEvent"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu2"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumEvent"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/bu3"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buNumEvent"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/buSum"
                android:layout_width="30pt"
                android:layout_height="25pt"
                android:layout_weight="1"
                android:onClick="buOpEvent"
                android:text="+"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bu0"
            android:layout_width="60pt"
            android:layout_height="25pt"
            android:layout_weight="2"
            android:onClick="buNumEvent"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:id="@+id/buDot"
            android:layout_width="30pt"
            android:layout_height="25pt"
            android:layout_weight="1"
            android:onClick="buNumEvent"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/buEqual"
            android:layout_width="30pt"
            android:layout_height="25pt"
            android:layout_weight="1"
            android:onClick="buEqualEvent"
            android:text="="
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>